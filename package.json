{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sessionizer",
  "title": "Sessionizer",
  "description": "Quick access to existing project directories in your preferred editor.",
  "icon": "extension-icon.png",
  "author": "carlos_ballena",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "code",
      "title": "VSCode Session",
      "description": "Open project in VSCode.",
      "mode": "view",
      "arguments": []
    },
    {
      "name": "vi",
      "title": "VIM Session",
      "description": "Open project in VIM.",
      "mode": "view",
      "preferences": [
        {
          "name": "terminalEmulatorPath",
          "type": "file",
          "default": "/opt/homebrew/bin/alacritty",
          "title": "Terminal Emulator Path",
          "description": "Path to your terminal emulator.",
          "required": true
        },
        {
          "name": "sessionizerPath",
          "type": "file",
          "default": "/Users/username/.local/bin/tmux-sessionizer",
          "title": "Tmux Sessionizer Path",
          "description": "Path to your tmux sessionizer script.",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.91.2",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  },
  "preferences": [
    {
      "name": "projectsDirectoryPath",
      "type": "directory",
      "default": "/Users/username/Projects/",
      "title": "Projects Directory Path",
      "description": "Path to your projects directory.",
      "required": true
    }
  ]
}